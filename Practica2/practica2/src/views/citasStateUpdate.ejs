<% include partial/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/<%= data.doctor_coddoctor %>/update/<%= data.codcita %>" method="POST">
          <div class="form-group">
            <h4> Paciente: <h4>
            <input type="text" name="nombre" value="<%= data.nombre%>" placeholder="nombre" disabled  class="form-control" >
          </div>
          <div class="form-group">
            <h4> Fecha: <h4>
            <input type="text" name="fecha" value="<%= data.fecha%>" placeholder="fecha" disabled  class="form-control" >
          </div> 
          <div class="form-group">
             <h4> Estado: <h4>
           <select name="status"  type="number">
             <option value='0'>pendiente</option>
             <option value='1'>completo</option>
            </select> 

          </div>
  

          <button type="submit" class="btn btn-primary">
            Guardar Cambios
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partial/_footer %>